                        <th>
                            @Html.DisplayNameFor(model => historyOrder.Status)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => historyOrder.CreatedDate)
                        </th>
                        <th>
                            @Html.DisplayName("Total price")
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => historyOrder.Customer.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => historyOrder.Status)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => historyOrder.CreatedDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => historyOrder.TotalPrice)
                        </td>
                        @*<td>
                                <a asp-action="Pay" asp-route-id="@Model.ActiveOrder.Id">Pay</a>
                                <a asp-action="Details" asp-route-id="@Model.ActiveOrder.Id">Details</a> |
                                <a asp-action="Delete" asp-route-id="@Model.ActiveOrder.Id">Delete</a>
                            </td>*@
                    </tr>

                </tbody>
            </table>


            <h6>Order items</h6>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayName("Category")
                        </th>
                        <th>
                            @Html.DisplayName("Kit")
                        </th>
                        <th>
                            @Html.DisplayName("Price")
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var orderItem in historyOrder.OrderItems)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m => orderItem.Kit.Category.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(m => orderItem.Kit.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(m => orderItem.Kit.Price)
                            </td>
                            <td>
                                @*<a asp-action="Edit" asp-controller="OrderItems" asp-route-id="@orderItem.Id">Edit</a> |*@
                                @*<a asp-action="Details" asp-controller="OrderItems" asp-route-id="@orderItem.Id">Details</a> |
                                    <a asp-action="Delete" asp-controller="OrderItems" asp-route-id="@orderItem.Id">Delete</a>*@
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    }
</div>



